{
    "version": 2,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 20,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "CUDD-Z3",
        "description": "Minimal CRAVE setup with CUDD and Z3",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "cacheVariables": {
          "WITH_SYSTEMC": "ON",
          "CMAKE_BUILD_TYPE": "Release",
          "metaSMT_USE_CUDD": "ON",
          "metaSMT_USE_Z3": "ON"
        }
      },
      {
        "name": "ALL",
        "inherits": "CUDD-Z3",
        "description": "CRAVE setup with all SMTs",
        "cacheVariables": {
          "metaSMT_USE_YICES2": "ON",
          "metaSMT_USE_Boolector": "ON",
          "metaSMT_USE_CVC4": "ON",
          "metaSMT_USE_MiniSat": "ON",
          "metaSMT_USE_STP": "ON",
          "metaSMT_USE_Aiger": "ON",
          "metaSMT_USE_lingeling": "ON",
          "metaSMT_USE_picosat": "ON"
        }
      }
    ]
}